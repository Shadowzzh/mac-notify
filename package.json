{
  "name": "@zhangziheng/mac-notify",
  "version": "0.0.4",
  "description": "Claude Code notification system - unified CLI tool for master and agent",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "mac-notify": "./bin/mac-notify.js"
  },
  "files": [
    "dist",
    "bin",
    "assets",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shadowzzh/mac-notify.git"
  },
  "bugs": {
    "url": "https://github.com/Shadowzzh/mac-notify/issues"
  },
  "homepage": "https://github.com/Shadowzzh/mac-notify#readme",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:master": "tsx watch src/commands/start.ts",
    "build": "tsup",
    "build:prod": "NODE_ENV=production tsup",
    "start": "node dist/cli.js",
    "start:master": "node dist/cli.js start-master",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "all": "pnpm format && pnpm typecheck && pnpm lint",
    "prepublishOnly": "npm run all && npm run build:prod",
    "prepack": "npm run build:prod"
  },
  "keywords": [
    "claude",
    "notification",
    "fastify",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.26.0",
    "get-port": "^7.1.0",
    "node-notifier": "^10.0.1",
    "plist": "^3.1.0",
    "prompts": "^2.4.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.0",
    "@types/node-notifier": "^8.0.5",
    "@types/plist": "^3.0.5",
    "@types/prompts": "^2.4.9",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
