{
  "name": "mac-notify",
  "version": "1.0.0",
  "description": "Claude Code notification system - unified CLI tool for master and agent",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "mac-notify": "./bin/mac-notify.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "dev:server": "tsx watch src/master/server.ts",
    "build": "tsup",
    "start": "node dist/cli.js",
    "start:server": "node dist/master/server.js",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "all": "pnpm format && pnpm typecheck && pnpm lint"
  },
  "keywords": ["claude", "notification", "fastify", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.26.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
